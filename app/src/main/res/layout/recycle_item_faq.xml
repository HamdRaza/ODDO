<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    >

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.tom.chef.ui.comman.faq.FAQItemViewModel" />

    </data>

    <LinearLayout
        android:layout_marginVertical="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_6sdp">

        <LinearLayout
            android:onClick="@{()->viewModel.toggleExpanded()}"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingEnd="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_bold_700"
                android:layout_weight="1"
                style="@style/montserrat_semiBols_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.mTitle}"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Amet minim mollit non deserunt ?" />
            <ImageView
                app:updateExpanded="@{viewModel.isExpanded}"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/deleteNotification"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/redD4" />
        </LinearLayout>
        <TextView
            tools:visibility="gone"
            android:visibility="@{viewModel.isExpanded?View.VISIBLE:View.GONE,default=gone}"
            style="@style/montserrat_medium_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@{viewModel.mDescription}"
            android:textColor="@color/black45"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit. Exercitation veniam consequat sunt nostrud amet.Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit. Exercitation veniam consequat sunt nostrud amet.Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint" />

        <View
            android:visibility="@{viewModel.isLast?View.GONE:View.VISIBLE,default=visible}"
            android:layout_marginTop="@dimen/_10sdp"
            android:alpha="0.58"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>
    </LinearLayout>
</layout>
