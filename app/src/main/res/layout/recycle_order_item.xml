<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.tom.chef.ui.comman.orderItem.OrderItemViewModel" />
    </data>
    <com.google.android.material.card.MaterialCardView
        style="@style/appCardView"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@{viewModel.itemName}"
                    android:layout_weight="1"
                    tools:text="Meat Samosa"
                    android:textColor="@color/black"
                    style="@style/montserrat_semiBols_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@{viewModel.price}"
                    android:fontFamily="@font/montserrat_bold_700"
                    tools:text="AED 20.3"
                    android:textColor="@color/colorPrimary"
                    style="@style/montserrat_semiBols_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_person_order"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <TextView
                    android:text="@{viewModel.peopleCount}"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_weight="1"
                    tools:text="4 People"
                    android:textColor="@color/semiDark"
                    style="@style/montserrat_medium_15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/montserrat_bold_700"
                    tools:text="X 2"
                    android:textColor="@color/black"
                    style="@style/montserrat_semiBols_16"
                    android:text="@{viewModel.total}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>