<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tom.chef.ui.dashboard.fragments.home.subFragments.orderDetails.OrderDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackgroundColor">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_10sdp"
                    android:visibility="@{viewModel.showAcceptReject?View.VISIBLE:View.GONE,default=gone}"
                    tools:visibility="visible">

                    <TextView
                        style="@style/actionButton.filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:onClick="@{()->viewModel.onAcceptClicked()}"
                        android:text="Accept" />

                    <TextView
                        style="@style/actionButton.transparent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:onClick="@{()->viewModel.onRejectClicked()}"
                        android:text="Reject" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_10sdp"
                    android:visibility="@{viewModel.showPrepared?View.VISIBLE:View.GONE,default=gone}"
                    tools:visibility="visible">

                    <TextView
                        style="@style/actionButton.filled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:onClick="@{()->viewModel.onFoodPreparedClicked()}"
                        android:text="Food Prepared" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_2sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/montserrat_medium_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pick Up Time : "
                                android:textColor="@color/black" />

                            <TextView
                                style="@style/montserrat_semiBols_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.pickUpTime}"
                                android:textColor="@color/black"
                                tools:text="03:45 PM" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/montserrat_medium_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivery Time : "
                                android:textColor="@color/black" />

                            <TextView
                                style="@style/montserrat_semiBols_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.deliveryTime}"
                                android:textColor="@color/black"
                                tools:text="03:45 PM" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/appCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="@{viewModel.showChefNote?View.VISIBLE:View.GONE,default=gone}"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_10sdp">

                        <TextView
                            style="@style/montserrat_semiBols_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notes To Chef"
                            android:textColor="@color/black" />

                        <TextView
                            style="@style/montserrat_reqular_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="@{viewModel.noteToChef}"
                            android:textColor="@color/black"
                            tools:text="Make it less spicy and add more butter. Please give extra sauce" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:orderItemAdopter="@{viewModel.orderItemAdopter}"
                    tools:itemCount="2"
                    tools:listitem="@layout/recycle_order_item" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/appCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_10sdp">

                        <TextView
                            style="@style/montserrat_semiBols_15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price Details"
                            android:textColor="@color/black" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:alpha="0.5"
                            android:background="#E9E9E9" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/_5sdp">

                            <TextView
                                style="@style/montserrat_medium_15"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:text="Chef Share"
                                android:textColor="@color/semiDark" />

                            <TextView
                                style="@style/montserrat_semiBols_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{viewModel.chefShareValue}"
                                android:textColor="@color/black"
                                tools:text="AED 300.00" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/appCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:visibility="@{viewModel.showDriverBox?View.VISIBLE:View.INVISIBLE,default=visible}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_3sdp">

                            <TextView
                                style="@style/montserrat_semiBols_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@{viewModel.riderName}"
                                android:textColor="@color/black"
                                tools:text="Kamal Das" />

                            <TextView
                                style="@style/montserrat_semiBols_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:background="@drawable/action_button_semitransparent"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_5sdp"
                                android:text="Assigned Driver" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:onClick="@{()->viewModel.callRiderClicked()}"
                                android:src="@drawable/call_icon" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_10sdp"
                    android:visibility="@{viewModel.showRequestExtraTime?View.VISIBLE:View.GONE,default=gone}"
                    tools:visibility="visible">

                    <TextView
                        style="@style/actionButton.transparent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:onClick="@{()->viewModel.onRequestExtraTimeClicked()}"
                        android:text="Request Extra Time" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
