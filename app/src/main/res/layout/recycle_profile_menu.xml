<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    >

    <data>
        <variable
            name="viewModel"
            type="com.tom.chef.ui.comman.profile.ProfileItemViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:elevation="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        style="@style/layout_with_shadow"
        android:onClick="@{viewModel.onMenuClicked}"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">


        <ImageView
            android:id="@+id/moveNext"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:src="@drawable/vector_move_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="@{viewModel.title}"
            android:id="@+id/name"
            style="@style/montserrat_semiBols_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:textColor="@color/redD1"
            app:layout_constraintEnd_toStartOf="@+id/moveNext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Edit Profile" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

