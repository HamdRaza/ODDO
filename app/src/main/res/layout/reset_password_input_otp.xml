<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.tom.chef.ui.allBottomSheets.otpScreen.ResetOTPViewModel" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/closeButton"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_baseline_close_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/colorPrimary" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"
                    style="@style/poppin_semiBol_24"
                    android:text="Enter 4 Digits Code"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    style="@style/poppins_medium_14"
                    android:textColor="@color/black51"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:text="@{viewModel.heading}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout

                    android:layout_marginVertical="@dimen/_20sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        android:id="@+id/otp1"
                        layout="@layout/otp_input_box"/>
                    <include
                        android:id="@+id/otp2"
                        layout="@layout/otp_input_box"/>
                    <include
                        android:id="@+id/otp3"
                        layout="@layout/otp_input_box"/>
                    <include
                        android:id="@+id/otp4"
                        layout="@layout/otp_input_box"/>
                </LinearLayout>

                <TextView
                    android:text="@{viewModel.remainingTime}"
                    android:textColor="@color/mediumGray"
                    style="@style/poppins_medium_12"
                    tools:text="00:56 sec"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/semiDark"
                        style="@style/poppin_reqular_13"
                        android:text="Didn't  received the OTP? "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:onClick="@{viewModel.resendOTP}"
                        android:paddingVertical="@dimen/_5sdp"
                        android:id="@+id/resendOtp"
                        android:textColor="@color/colorPrimary"
                        style="@style/poppin_semiBol_13"
                        android:text="RESEND OTP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:onClick="@{viewModel.submitClicked}"
                    android:id="@+id/next_button"
                    android:layout_marginBottom="@dimen/_30sdp"
                    style="@style/button_big"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Continue" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>