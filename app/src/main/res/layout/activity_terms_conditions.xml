<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.tom.chef.ui.auth.termsCondition.TermsAndConditionViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_layout" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:outlineSpotShadowColor="#0DFFFFFF"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    style="@style/layout_with_shadow"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/filterList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingVertical="@dimen/_20sdp"
                        android:paddingHorizontal="@dimen/_25sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@{viewModel.enTitle}"
                            android:textColor="@color/black02"
                            style="@style/poppin_semiBol_14"
                            tools:text="@string/about_heading_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="@{viewModel.enDescription}"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/redD1"
                            style="@style/poppin_reqular_12"
                            tools:text="@string/about_message_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="@{viewModel.arTitle}"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/black02"
                            style="@style/poppin_semiBol_14"
                            tools:text="@string/about_heading_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="@{viewModel.arDescription}"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/redD1"
                            style="@style/poppin_reqular_12"
                            tools:text="@string/about_message_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>





            </androidx.core.widget.NestedScrollView>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>