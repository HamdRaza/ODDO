<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tom.chef.ui.comman.menuItems.MenuItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/topBackgroundImage"
        app:layout_constraintTop_toBottomOf="@id/topBackgroundImage">

        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:elevation="0dp"
            android:orientation="horizontal"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_1sdp"
            app:layout_constraintBottom_toBottomOf="@id/allText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/allText" />

        <LinearLayout
            android:id="@+id/allText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:elevation="@dimen/_10sdp"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/montserrat_semiBols_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.itemName}"
                android:textColor="@color/black"
                tools:text="Meat Samosa " />

            <TextView
                style="@style/montserrat_medium_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="@{viewModel.itemDescription}"
                android:textColor="@color/divider_line"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing " />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/stock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/stock">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="@{viewModel.isThisVariant?View.GONE:View.VISIBLE,default=visible}"
                        tools:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/icon_person_order" />

                        <TextView
                            style="@style/montserrat_reqular_10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:text="@{viewModel.servingForPeople}"
                            android:textColor="@color/semiDark"
                            tools:text="4 People" />
                    </LinearLayout>

                    <TextView
                        style="@style/montserrat_semiBols_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold_700"
                        android:includeFontPadding="false"
                        android:text="Price On Selection"
                        android:textColor="@color/colorPrimary"
                        android:visibility="@{viewModel.isThisVariant?View.VISIBLE:View.GONE,default=visible}" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="-5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/montserrat_semiBols_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:text="In Stock  "
                        android:textColor="@color/colorPrimary" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:checked="@{viewModel.isInStock}"
                        android:minWidth="@dimen/_20sdp"
                        android:onCheckedChanged="@{(view,bool)->viewModel.onSwitched(view,bool)}"
                        android:minHeight="@dimen/_5sdp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:switchMinWidth="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"
                        android:thumbTextPadding="0dp"
                        app:layout_constraintEnd_toStartOf="@+id/priceLayout"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:switchPadding="0dp"
                        app:thumbTint="@color/tumb_color"
                        app:track="@drawable/rectangle_26242__1_"
                        app:trackTint="@color/black69_20" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/priceLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.isThisVariant?View.GONE:View.VISIBLE,default=visible}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/stock"
                    tools:visibility="visible">

                    <TextView
                        style="@style/montserrat_semiBols_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold_700"
                        android:text="@{viewModel.itemPrice}"
                        android:textColor="@color/colorPrimary"
                        tools:text="AED 20.3" />

                    <TextView
                        style="@style/montserrat_semiBols_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="0.5"
                        android:fontFamily="@font/montserrat_bold_700"
                        android:text="@{viewModel.itemOldPrice}"
                        android:textColor="@color/colorPrimary"
                        tools:text="AED 20.3" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/priceLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/stock"
                    app:layout_constraintVertical_bias="0"
                    app:veriantsNamesAdopter="@{viewModel.variantItemAdopter}"
                    tools:itemCount="2"
                    tools:listitem="@layout/recycle_item_veriants" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="0dp"
            android:elevation="@dimen/_2sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:scaleType="centerCrop"
            app:imageUrl="@{viewModel.itemImage}"
            app:layout_constraintBottom_toBottomOf="@id/allText"
            app:layout_constraintHeight_min="@dimen/_100sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/allText"
            app:shapeAppearanceOverlay="@style/customRoundedImageViewFull3"
            tools:src="@drawable/dummy_profile_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>