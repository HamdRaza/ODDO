<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.tom.chef.ui.allBottomSheets.carManBottomSheet.CarManBottomSheetViewModel" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:clickable="false"
                    android:visibility="gone"
                    android:id="@+id/closeButton"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_baseline_close_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/colorPrimary" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <LinearLayout
                android:paddingTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>
                    <TextView
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/montserrat_semiBol_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:text="Select Schedule"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                  <androidx.wear.widget.WearableRecyclerView
                      app:timerItemAdopter="@{viewModel.timerItemAdapter}"
                      tools:itemCount="5"
                      tools:listitem="@layout/layout_timer_top_item"
                      app:layoutManager="androidx.wear.widget.WearableLinearLayoutManager"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
                

                </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>