<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.tom.chef.ui.auth.otp.OTPViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/langaugeBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.textfield.TextInputLayout
                android:background="@color/transparent"
                android:padding="0dp"
                app:counterEnabled="false"
                app:errorEnabled="false"
                app:hintEnabled="false"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:endIconTint="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:focusable="false"
                    android:id="@+id/languageInput"
                    android:drawablePadding="-12dp"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:drawableTint="@color/white"
                    android:padding="0dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:drawableStart="@drawable/world_vector"
                    style="@style/input_back.language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EN"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/langaugeBox"
            android:layout_marginHorizontal="@dimen/_20sdp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingVertical="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:text="Verification"
                        android:textColor="@color/colorPrimary"
                        style="@style/poppin_semiBol_30"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/semiDark"
                        style="@style/poppins_medium_14"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/_30sdp"
                        android:text="Enter the 4 digit OTP sent to your registered mobile number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include
                            android:id="@+id/otp_one"
                            layout="@layout/otp_input_box"/>
                        <include
                            android:id="@+id/otp_two"
                            layout="@layout/otp_input_box"/>
                        <include
                            android:id="@+id/otp_3"
                            layout="@layout/otp_input_box"/>
                        <include
                            android:id="@+id/otp_4"
                            layout="@layout/otp_input_box"/>
                    </LinearLayout>
                    <TextView
                        android:text="@{viewModel.remainingTime}"
                        android:textColor="@color/mediumGray"
                        style="@style/poppins_medium_12"
                        tools:text="00:56 sec"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/semiDark"
                            style="@style/poppin_reqular_13"
                            android:text="Didn't received the OTP? "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:onClick="@{viewModel.resendOTP}"
                            android:paddingVertical="@dimen/_5sdp"
                            android:id="@+id/resendOtp"
                            android:textColor="@color/colorPrimary"
                            style="@style/poppin_semiBol_13"
                            android:text="RESEND OTP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:onClick="@{viewModel.submitClicked}"
                        app:cornerRadius="@dimen/_8sdp"
                        android:id="@+id/next_button"
                        android:layout_marginBottom="@dimen/_30sdp"
                        style="@style/button_big"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:text="Submit" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

