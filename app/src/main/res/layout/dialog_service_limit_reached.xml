<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.tom.chef.ui.dialogs.ConfirmDialogViewModel" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@{viewModel.heading}"
                        android:gravity="center"
                        style="@style/poppin_semiBol_15"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp"
                        tools:text="Service cart limit"/>
                    <ImageView
                        android:onClick="@{()->viewModel.onDismissClicked()}"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_close_24"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        app:tint="@color/black" />
                </LinearLayout>


                <TextView
                    android:gravity="center"
                    android:text="@{viewModel.subHeading}"
                    tools:text="Adding this service will clear your cart. Proceed with the current selection? "
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    style="@style/poppin_reqular_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@{viewModel.noButton}"
                    android:onClick="@{()->viewModel.onNoButtonClicked()}"
                    android:elevation="0dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    tools:text="No"
                    android:paddingVertical="@dimen/_5sdp"
                    style="@style/button_with_shadow_popinSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@{viewModel.yesButton}"
                    android:onClick="@{()->viewModel.onYesButtonClicked()}"
                    android:elevation="0dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_weight="1"
                    tools:text="Yes"
                    android:paddingVertical="@dimen/_5sdp"
                    style="@style/button_with_shadow_popinSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>