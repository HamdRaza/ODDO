<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tom.chef.ui.comman.orders.OrderViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/appCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        android:onClick="@{()->viewModel.onClicked()}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_12sdp">

            <TextView
                style="@style/montserrat_semiBol_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/backgroun_status"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:text="@{viewModel.status}"
                android:textColor="@color/white"
                android:onClick="@{()->viewModel.onWithdrawClicked()}"
                tools:text="PENDING" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/montserrat_semiBols_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.orderNumber}"
                    android:textColor="@color/colorPrimary"
                    tools:text="#TM-011550455587" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/montserrat_medium_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:text="@{viewModel.pickUpTime}"
                            android:textColor="@color/black"
                            tools:text="Pick Up Time : 03:45 PM" />

                        <TextView
                            style="@style/montserrat_medium_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:text="@{viewModel.deliveryTime}"
                            android:textColor="@color/black"
                            tools:text="Pick Up Time : 03:45 PM" />
                    </LinearLayout>

                    <TextView
                        style="@style/montserrat_semiBols_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@{viewModel.price}"
                        android:textColor="@color/colorPrimary"
                        tools:text="AED  100.00" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.5"
                    android:background="@color/black" />

                <TextView
                    style="@style/montserrat_semiBols_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:text="@{viewModel.itemsCount}"
                    android:textColor="@color/colorPrimary"
                    tools:text="5 Items" />

                <TextView
                    style="@style/montserrat_reqular_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@{viewModel.itemsNames}"
                    android:textColor="@color/divider_line"
                    tools:text="Shawarma x2, Chicken Roll x5, Sharja Shake x4 Butterscotch x6" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>