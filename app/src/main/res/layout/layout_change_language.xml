<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/langaugeBox"
        android:paddingVertical="@dimen/_5sdp"
        android:background="@drawable/langauge_back"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:paddingHorizontal="@dimen/_5sdp"
            android:src="@drawable/world_vector"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_20sdp" />

        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            style="@style/montserrat_semiBols_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EN  " />
    </LinearLayout>
    <LinearLayout
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@id/langaugeBox"
        app:layout_constraintBottom_toBottomOf="@id/langaugeBox"
        app:layout_constraintStart_toStartOf="@id/langaugeBox"
        app:layout_constraintEnd_toEndOf="@id/langaugeBox">

        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/transparent"
            android:padding="0dp"
            app:counterEnabled="false"
            app:errorEnabled="false"
            app:hintEnabled="false"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:endIconTint="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:focusable="false"
                android:id="@+id/languageInput"
                android:drawablePadding="-12dp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:drawableTint="@color/white"
                android:padding="0dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:drawableStart="@drawable/world_vector"
                style="@style/input_back.language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EN"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>